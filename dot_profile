# Export some default variables
export BROWSER='firefox'
export EDITOR='nvim'
export LESS="-XR"
export PAGER='less'
export TERMINAL='kitty'
export XIVIEWER='sxiv'

# Set XDG variables
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_CACHE_HOME="$HOME/.cache"

# Set MISC variables
export _Z_DATA="$XDG_DATA_HOME/z"
export ANDROID_USER_HOME="$XDG_CONFIG_HOME/android"
export ANDROID_AVD_HOME="$ANDROID_USER_HOME/avd"
export AWS_DEFAULT_REGION="eu-west-1"
export AWS_SHARED_CREDENTIALS_FILE="$XDG_CONFIG_HOME/aws/credentials"
export AWS_CONFIG_FILE="$XDG_CONFIG_HOME/aws/config"
export DOCKER_CONFIG="$XDG_CONFIG_HOME/docker"
export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc"
export HISTFILE="$XDG_DATA_HOME/zsh/history"
export ICEAUTHORITY="$XDG_CACHE_HOME/ICEauthority"
export INPUTRC="$XDG_CONFIG_HOME/readline/inputrc"
export LIBVIRT_DEFAULT_URI="qemu:///system"
export PYLINTHOME="$XDG_CACHE_HOME/pylint"
export SCREENRC="$XDG_CONFIG_HOME/screen/screenrc"
export TF_CLI_CONFIG_FILE="$XDG_CONFIG_HOME/terraform/terraform.rc"
export TMUX_PLUGIN_MANAGER_PATH="$XDG_CONFIG_HOME/tmux/plugins/"
export TMUX_TMPDIR="$XDG_RUNTIME_DIR"
export DBUS_SESSION_BUS_ADDRESS="unix:path=${XDG_RUNTIME_DIR}/bus"

# Set some defaults
alias irssi="irssi --config=$XDG_CONFIG_HOME/irssi/config --home=$XDG_DATA_HOME/irssi "

# Set PATH variable
export ANDROID_PATH="$HOME/Android/Sdk/cmdline-tools/latest/bin"
export PATH="$HOME/bin:$HOME/Sync/bin:$HOME/.local/bin:$HOME/src/portbase-bin:$ANDROID_PATH:$PATH"
