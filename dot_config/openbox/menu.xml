<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu
    xmlns="http://openbox.org/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://openbox.org/
    file:///usr/share/openbox/menu.xsd">
    <menu id="root-menu" label="Openbox 3">
        <item label="Terminal">
            <action name="Execute">
                <execute>kitty --single-instance</execute>
            </action>
        </item>
        <item label="Web browser">
            <action name="Execute">
                <execute>rofi-browser</execute>
            </action>
        </item>
        <item label="Application launcher">
            <action name="Execute">
                <execute>rofi -show combi</execute>
            </action>
        </item>
        <item label="Pulsemixer">
            <action name="Execute">
                <execute>kitty --single-instance -e pulsemixer</execute>
            </action>
        </item>
        <separator />
        <item label="Configurations">
            <action name="Execute">
                <execute>obconf</execute>
            </action>
        </item>
        <item label="Reconfigure">
            <action name="Reconfigure" />
            <action name="Execute">
                <execute>sh -c "pkill tint2; sleep 1; tint2"</execute>
            </action>
        </item>
        <separator />
        <menu id="exit" label="Exit" >
            <item label="Logout">
                <action name="Exit" />
            </item>
            <item label="Suspend">
            	<icon>suspend</icon>
                <action name="Execute">
                    <execute>systemctl suspend</execute>
                </action>
            </item>
            <item label="Hibernate">
                <action name="Execute">
                    <execute>systemctl hibernate</execute>
                </action>
            </item>
            <item label="Reboot">
                <action name="Execute">
                    <execute>systemctl reboot</execute>
                </action>
            </item>
            <item label="Shutdown">
                <action name="Execute">
                    <execute>systemctl poweroff</execute>
                </action>
            </item>
        </menu>
    </menu>
</openbox_menu>
