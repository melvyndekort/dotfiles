#!/bin/bash

# Check if codium exists
command -v codium >/dev/null || { echo "codium not found" >&2; exit 1; }

# Profile list - easy to modify
profiles="Default
Portbase"

# Show rofi menu
choice=$(echo "$profiles" | rofi -dmenu -p 'Launch VSCodium Profile' -i)
[[ -n "$choice" ]] || exit 0

# Launch with selected profile
codium --profile "$choice" &
