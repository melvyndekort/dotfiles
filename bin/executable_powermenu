#!/bin/sh

ENTRIES=(
' lock'
' logout'
' suspend'
'鈴 hibernate'
' reboot'
" shutdown")

SELECTED=$(printf "%s\n" "${ENTRIES[@]}" | rofi -dmenu -p " Choose your desired state:" | cut -d' ' -f2)
[[ -z "$SELECTED" ]] && exit 0

case "$SELECTED" in
  lock)
    xset s activate ;;
  logout)
    i3-msg exit ;;
  suspend)
    xset s activate
    systemctl suspend ;;
  hibernate)
    xset s activate
    systemctl hibernate ;;
  reboot)
    systemctl reboot ;;
  shutdown)
    systemctl poweroff -i ;;
esac
