#!/bin/sh

choice="$(rofi -dmenu -p 'Display setup:' << EOF | cut -d' ' -f1
laptop 
home-office 度度
pb-office  度
hdmi-clone 
hdmi-expand  度
EOF
)"

case "$choice" in
  laptop)
    xrandr \
      --output eDP-1 --primary --auto --pos 0x0 \
      --output DP-1 --off \
      --output DP-2 --off \
      --output HDMI-1 --off \
      --output HDMI-2 --off \
      --output DVI-I-1-1 --off \
      --output DVI-I-2-2 --off ;;

  home-office)
    xrandr \
      --output DP-1 --primary --auto --pos 0x288 --rotate normal \
      --output DVI-I-1 --auto --pos 1680x0 --rotate left \
      --output DP-0 --off \
      --output DVI-I-0 --off ;;

  pb-office)
    xrandr \
      --output eDP-1 --auto --pos 0x504 \
      --output DP-1 --off \
      --output DP-2 --off \
      --output HDMI-1 --primary --auto --pos 1920x0 \
      --output HDMI-2 --off \
      --output DVI-I-1-1 --off \
      --output DVI-I-2-2 --off ;;

  hdmi-clone)
    xrandr \
      --output eDP-1 --primary --auto --pos 0x0 \
      --output DP-1 --off \
      --output DP-2 --off \
      --output HDMI-1 --auto --same-as eDP-1 \
      --output HDMI-2 --off \
      --output DVI-I-1-1 --off \
      --output DVI-I-2-2 --off ;;

  hdmi-expand)
    xrandr \
      --output eDP-1 --primary --auto --pos 0x0 \
      --output DP-1 --off \
      --output DP-2 --off \
      --output HDMI-1 --auto --pos 1920x0 \
      --output HDMI-2 --off \
      --output DVI-I-1-1 --off \
      --output DVI-I-2-2 --off ;;

  *)
    exit 1 ;;
esac

notify-send "Configured display setup: $choice"
