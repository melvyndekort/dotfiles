#!/bin/sh

choice="$(rofi -dmenu -p 'Display setup' << EOF | cut -d' ' -f1
laptop 
laptop-mon  度
office  度
home-pc 度
hdmi-clone 
hdmi-expand  度
EOF
)"

case "$choice" in
  laptop)
    xrandr \
      --output eDP-1 --primary --auto --pos 0x0 \
      --output DP-1 --off \
      --output DP-2 --off \
      --output HDMI-1 --off \
      --output HDMI-2 --off \
      --output HDMI-3 --off ;;

  laptop-mon)
    xrandr \
      --output eDP-1 --mode 1920x1080 --pos 0x628 --rotate normal \
      --output DP-1 --primary --mode 3440x1440 --pos 1920x0 --rotate normal \
      --output DP-2 --off \
      --output HDMI-1 --off \
      --output HDMI-2 --off \
      --output HDMI-3 --off ;;

  office)
    xrandr \
      --output eDP-1 --auto --pos 0x504 \
      --output DP-1 --off \
      --output DP-2 --off \
      --output HDMI-1 --primary --auto --pos 1920x0 \
      --output HDMI-2 --off \
      --output HDMI-3 --off ;;

  home-pc)
    xrandr \
      --output DP-0 --off \
      --output DP-1 --primary --auto --pos 0x0 --rotate normal \
      --output DVI-I-1 --off ;;

  hdmi-clone)
    xrandr \
      --output eDP-1 --primary --auto --pos 0x0 \
      --output DP-1 --off \
      --output DP-2 --off \
      --output HDMI-1 --auto --same-as eDP-1 \
      --output HDMI-2 --off \
      --output HDMI-3 --off ;;

  hdmi-expand)
    xrandr \
      --output eDP-1 --primary --auto --pos 0x0 \
      --output DP-1 --off \
      --output DP-2 --off \
      --output HDMI-1 --auto --pos 1920x0 \
      --output HDMI-2 --off \
      --output HDMI-3 --off ;;

  *)
    exit 1 ;;
esac

notify-send "Configured display setup: $choice"
set-wallpaper
