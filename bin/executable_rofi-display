#!/bin/sh

choice="$(rofi -dmenu -p 'Display setup' << EOF | cut -d' ' -f1
laptop 
home-pc 度度
home-pblaptop 度度
pb-office  度
hdmi-clone 
hdmi-expand  度
EOF
)"

case "$choice" in
  laptop)
    xrandr \
      --output eDP-1 --primary --auto --pos 0x0 \
      --output DP-1 --off \
      --output DP-2 --off \
      --output HDMI-1 --off \
      --output HDMI-2 --off \
      --output HDMI-3 --off ;;

  home-pc)
    xrandr \
      --output DP-0 --off \
      --output DP-1 --primary --auto --pos 0x288 --rotate normal \
      --output DVI-I-1 --auto --pos 1680x0 --rotate left ;;

  home-pblaptop)
    xrandr \
      --output eDP-1 --off \
      --output DP-1 --primary --mode 1680x1050 --pos 1920x290 --rotate normal \
      --output DP-2 --off \
      --output HDMI-1 --mode 1680x1050 --pos 3600x0 --rotate left \
      --output HDMI-2 --off \
      --output HDMI-3 --off ;;

  pb-office)
    xrandr \
      --output eDP-1 --auto --pos 0x504 \
      --output DP-1 --off \
      --output DP-2 --off \
      --output HDMI-1 --primary --auto --pos 1920x0 \
      --output HDMI-2 --off \
      --output HDMI-3 --off ;;

  hdmi-clone)
    xrandr \
      --output eDP-1 --primary --auto --pos 0x0 \
      --output DP-1 --off \
      --output DP-2 --off \
      --output HDMI-1 --auto --same-as eDP-1 \
      --output HDMI-2 --off \
      --output HDMI-3 --off ;;

  hdmi-expand)
    xrandr \
      --output eDP-1 --primary --auto --pos 0x0 \
      --output DP-1 --off \
      --output DP-2 --off \
      --output HDMI-1 --auto --pos 1920x0 \
      --output HDMI-2 --off \
      --output HDMI-3 --off ;;

  *)
    exit 1 ;;
esac

notify-send "Configured display setup: $choice"
