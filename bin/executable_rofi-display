#!/bin/sh

choice="$(find ~/.config/screenlayout -name "*.sh" -executable -printf "%f\n" | sed 's/\.sh$//' | sort | rofi -dmenu -p 'Display setup')"

if [ -f ~/.config/screenlayout/"$choice".sh ]; then
  ~/.config/screenlayout/"$choice".sh
  sleep 3
  ~/bin/wallpaper-set
  ~/.config/polybar/launch.sh
  notify-send "Configured display setup: $choice"
else
  exit 1
fi
