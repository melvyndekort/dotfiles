#!/bin/sh

connect() {
  adb disconnect
  sleep 0.2
  adb tcpip 5555
  sleep 0.2
  notify-send "$(adb connect $1)"
}

choice="$( ( cat << EOF && arp -n | sed '1d' | awk '{print "connect to " $1}' | sort -V -u ) | rofi -dmenu -p 'ADB task'
list devices
restart adb user
restart adb root
disconnect
switch to tcpip
connect to lmphone
connect to hotspot
EOF
)"

case "$choice" in
  'connect to hotspot')
    connect "$(ip route show | grep default | awk '{print $3}')"
    ;;
  connect*)
    connect "$(echo $choice | cut -d' ' -f3)"
    ;;
  disconnect)
    notify-send "$(adb disconnect)"
    ;;
  'switch to tcpip')
    notify-send "$(adb tcpip 5555)"
    ;;
  'list devices')
    notify-send "$(adb devices)"
    ;;
  'restart adb user')
    adb kill-server
    notify-send "$(adb start-server 2>&1)"
    ;;
  'restart adb root')
    adb kill-server
    notify-send "$(pkexec adb start-server 2>&1)"
    ;;
esac
